@model dbshub.Controllers.LoginUser
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>登录</title>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3/js/jquery-1.9.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3/js/jquery-ui-1.10.3.custom.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Scripts/jquery-ui-1.10.3/css/redmond/jquery-ui-1.10.3.custom.min.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/underscore-min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tmpl.min.js")" type="text/javascript"></script>


    <script src="@Url.Content("~/Scripts/site.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/content/telerik.vista.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/content/telerik.common.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/content/styles.css")" rel="stylesheet" type="text/css" />
    
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <style>
        table tr{ height:27px;}
    </style>
    <script>
        $(function () {
            var h = $(window).height();
            $("body>div").css("margin-top", (h - $("body>div").height()) / 2 + "px");
            $("#accordion").accordion();
            $("[type=submit]").button()//.AjaxPost();
        });
    </script>
</head>
<body>
    <div style="width:300px;height:200px;   margin-left :auto;margin-right :auto;">
      @Html.ValidationSummary(false)
      <form action="@Request.Url" method="post" rel="@Request.UrlReferrer" >
        <img src="/content/images/logo1.png" />
        <div id="accordion">
            <h3>登录</h3>
            <div>
                <table>
                    <tr><td>用户名:</td><td><input name="UserNO" value="@Model.UserNO"/></td></tr>
                    <tr><td>密码:</td><td><input type="password" name="Password" value=""/></td></tr>
                    <tr><td colspan=2><input type="submit" value="提交" /> </td></tr>
                </table>
            </div>
        </div>
        <a href="/account/register">还没有账号，去注册</a>
      </form>
    </div>
</body>
</html>
