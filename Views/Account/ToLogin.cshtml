@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head> 
    <title>转到登录</title>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3/js/jquery-1.9.1.js")" type="text/javascript"></script>
    <style>
        h2 { color: #505050; font-family: Segoe UI Light,Calibri; font-size: 30px; font-weight: lighter; line-height: 1.25em;  }
        h3, li { color: #505050; font-family: Segoe UI,Arial,Tahoma; font-size: 16px; font-weight: normal; line-height: 1.25em;}
        a{ line-height:28px; text-decoration:none}
        h3 span{ font-size:2em;}
    </style>

    <script>
        var a = setInterval(function () {
            var timeto = parseInt($("#timeto").text());
            if (timeto <= 1) {
                clearInterval(a);
                window.location = "@ViewBag.url";
            }
            else $("#timeto").text(timeto - 1);
        }, 1000);

    </script>
</head>
<body style="background:#EEEEEE">
    <div style="width:75%;margin:auto;padding:20px;">
        <a style="background:url(/content/images/logo.png) repeat scroll 0 0 transparent; display:block;width:200px;height:48px;"> </a>
        <h2>@(ViewBag.errmsg)</h2>
        <h3><span id="timeto">@ViewBag.time</span>秒钟后自动跳转到登录页面，或者您可以</h3>
        <ul>
            <li ><a id="login" href="@ViewBag.url">现在就去登录页面</a></li>
            <li><a href="/">回到首页</a></li>
            <li><a href="#" onclick="javascript:window.history.back();">后退到之前的页面</a></li>
        </ul>
    </div>
</body>
</html>
