@{
    var db = l.core.MongoDBHelper.GetMongoDB();
    var account = dbshub.Models.SiteAccount.Get(Html.ViewContext.HttpContext, db);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3/js/jquery-1.9.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3/js/jquery-ui-1.10.3.custom.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Scripts/jquery-ui-1.10.3/css/redmond/jquery-ui-1.10.3.custom.min.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/dbshub.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/underscore-min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tmpl.min.js")" type="text/javascript"></script>
        <link href="@Url.Content("~/content/telerik.vista.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/content/telerik.common.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/content/styles.css")" rel="stylesheet" type="text/css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="header">
        <a href="#">东郭</a>
        <a href="#">设计</a>

        <span style="float:right">欢迎, @(account.UserName??account.UserNO) </span>
        <div style="clear:both"></div>
    </div>
    <div class="pageBody">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
